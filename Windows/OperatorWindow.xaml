<Window x:Class="IspAudit.Windows.OperatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:models="clr-namespace:IspAudit.Models"
        Title="ISP Audit — Оператор"
        Height="640" Width="1100"
        MinHeight="600" MinWidth="980"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Body -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Минималистичный header: название + ⚙️/? -->
                    <DockPanel Margin="0,0,0,10" LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left" Text="ISP Audit" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>

                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Style="{StaticResource ThemeToggleButtonStyle}"
                                    ToolTip="Настройки"
                                    Command="{Binding SettingsCommand}"
                                    Height="30" Width="34" Margin="0,0,8,0">
                                <materialDesign:PackIcon Kind="Cog" Width="20" Height="20"/>
                            </Button>
                            <Button Style="{StaticResource ThemeToggleButtonStyle}"
                                    ToolTip="Справка"
                                    Command="{Binding HelpCommand}"
                                    Height="30" Width="34">
                                <materialDesign:PackIcon Kind="HelpCircleOutline" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                    <!-- Компактная шапка: статус + действия -->
                    <DockPanel Margin="0,0,0,10" LastChildFill="False">
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="{Binding Vm.HeroIconKind}"
                                                    Width="26" Height="26" Margin="0,0,10,0"
                                                    VerticalAlignment="Top"
                                                    Foreground="{Binding Vm.HeroAccentBrush}"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Vm.Headline}" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Vm.SummaryLine}" Margin="0,2,0,0" Opacity="0.75" FontSize="12" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <ToggleButton Content="Автоисправление"
                                          Style="{StaticResource BypassToggleButtonStyle}"
                                          Height="30" MinWidth="140" Padding="12,0" FontSize="12"
                                          IsChecked="{Binding Main.EnableAutoBypass, Mode=TwoWay}"
                                          ToolTip="Автоматически применять безопасные исправления при проблемах (без ручного выбора стратегий)."
                                          Margin="0,0,10,0"/>
                            <ToggleButton Content="Разрешить DNS/DoH"
                                          Style="{StaticResource BypassToggleButtonStyle}"
                                          Height="30" MinWidth="160" Padding="12,0" FontSize="12"
                                          IsChecked="{Binding Main.AllowDnsDohSystemChanges, Mode=OneWay}"
                                          PreviewMouseLeftButtonDown="DnsDohConsentToggle_PreviewMouseLeftButtonDown"
                                          ToolTip="Явное разрешение на системные изменения DNS/DoH (может менять настройки сети Windows). Без этого DoH из рекомендаций будет пропускаться."
                                          Margin="0,0,10,0"/>
                            <Button Style="{StaticResource ThemeToggleButtonStyle}"
                                    Command="{Binding Main.ToggleThemeCommand}"
                                    ToolTip="Переключить тему"
                                    Height="30" Width="34" Margin="0,0,8,0">
                                <materialDesign:PackIcon Kind="ThemeLightDark" Width="20" Height="20"/>
                            </Button>
                            <Button Style="{StaticResource ThemeToggleButtonStyle}"
                                    ToolTip="Расширенный режим"
                                    Command="{Binding EngineerCommand}"
                                    Height="30" Width="34">
                                <materialDesign:PackIcon Kind="Wrench" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                    <!-- P1.4: Post-crash диагнозы (crash-reports) -->
                    <Border Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}" Margin="0,0,0,10"
                            Visibility="{Binding Main.IsCrashReportsPromptVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <materialDesign:PackIcon Kind="AlertCircleOutline" Width="16" Height="16" Margin="0,0,6,0"/>
                                <TextBlock Text="Отчёты о падении" FontWeight="SemiBold"/>
                            </StackPanel>

                            <TextBlock Text="{Binding Main.CrashReportsPromptText}" TextWrapping="Wrap" Opacity="0.85"/>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="Открыть папку" Style="{StaticResource PrimaryButtonStyle}" Padding="12,6" MinWidth="150"
                                        Command="{Binding Main.CrashReportsOpenFolderCommand}" Margin="0,0,10,0"/>
                                <Button Content="Скрыть" Style="{StaticResource SecondaryButtonStyle}" Padding="12,6" MinWidth="110"
                                        Command="{Binding Main.CrashReportsDismissCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Источник трафика (без большого заголовка/описания) -->
                    <Border Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}" Margin="0,0,0,10"
                            Visibility="{Binding Vm.IsSourceStepVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <WrapPanel Margin="0,0,0,6">
                                <TextBlock Text="Приложение:" Opacity="0.75" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            </WrapPanel>

                            <TextBlock Text="Тестовый режим: быстрая проверка интернета (включено в настройках)."
                                       Opacity="0.8" TextWrapping="Wrap"
                                       Visibility="{Binding Main.IsBasicTestMode, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <Grid Visibility="{Binding Main.IsBasicTestMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Text="{Binding Main.ExePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         IsReadOnly="{Binding Vm.IsSourceSelectionEnabled, Converter={StaticResource InverseBoolConverter}}"
                                         Height="36"
                                         materialDesign:HintAssist.Hint="Путь к .exe"
                                         ToolTip="Выберите .exe приложения/игры."/>

                                <Button Grid.Column="1"
                                        Content="Обзор..."
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding Main.BrowseExeCommand}"
                                        Height="36" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Шаг 2: прогресс -->
                    <Border Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}" Margin="0,0,0,10"
                            Visibility="{Binding Vm.IsProgressStepVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Анализ сети…" FontWeight="SemiBold"/>
                            <ProgressBar Height="10" Margin="0,6,0,0"
                                         Minimum="0"
                                         Maximum="{Binding Main.ProgressBarMax}"
                                         Value="{Binding Main.CompletedTests, Mode=OneWay}"/>
                            <TextBlock Text="{Binding Main.RunningStatusText}" Opacity="0.8" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Шаг 4: исправление + пост-проверка -->
                    <Border Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}" Margin="0,0,0,10"
                            Visibility="{Binding Vm.IsFixStepCardVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding Vm.FixStepTitle}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Vm.FixStepStatusText}" Opacity="0.8" Margin="0,6,0,0" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Vm.FixStepOutcomeText}" Margin="0,6,0,0" TextWrapping="Wrap" Opacity="0.85"
                                       Visibility="{Binding Vm.HasFixStepOutcome, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- Шаг 3: итог — сводка + проблемы карточками (по умолчанию вместо таблицы) -->
                    <Border Padding="10" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}" Margin="0,0,0,10"
                            Visibility="{Binding Vm.IsSummaryStepVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding Vm.CheckedProblemsLine}" Opacity="0.85" TextWrapping="Wrap"/>

                            <ItemsControl ItemsSource="{Binding Vm.SummaryProblemCards}" Margin="0,8,0,0"
                                          Visibility="{Binding Vm.HasSummaryProblems, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="10" Margin="0,0,0,8" CornerRadius="8"
                                                BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}">
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <StackPanel Margin="0,0,0,0">
                    <!-- CTA: один главный -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                        <Button Content="{Binding Vm.PrimaryButtonText}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="180" Height="44"
                                Command="{Binding Vm.PrimaryCommand}"
                                IsEnabled="{Binding Vm.IsPrimaryActionEnabled}"/>

                        <Button Content="Откатить"
                                Style="{StaticResource SecondaryButtonStyle}"
                                MinWidth="120" Height="44"
                                Margin="12,0,0,0"
                                Command="{Binding Vm.RollbackCommand}"/>

                        <Button Content="Подробнее"
                            Style="{StaticResource SecondaryButtonStyle}"
                            MinWidth="120" Height="44"
                            Margin="12,0,0,0"
                            Command="{Binding Vm.ToggleDetailsCommand}"/>
                    </StackPanel>

                    <!-- Подробности + история под одним раскрытием -->
                        <Expander Header="Подробнее" Margin="0,10,0,0" IsExpanded="{Binding Vm.IsDetailsExpanded, Mode=TwoWay}">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Источник" Opacity="0.75"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Vm.UserDetails_Source}" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Проблемный ресурс" Opacity="0.75" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Vm.UserDetails_Anchor}" Margin="0,4,0,0" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Статус" Opacity="0.75" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Vm.UserDetails_Status}" Margin="0,4,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Результат" Opacity="0.75" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Vm.UserDetails_Result}" Margin="0,4,0,0" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Автоисправление" Opacity="0.75" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Vm.UserDetails_AutoFix}" Margin="0,4,0,0"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Обход" Opacity="0.75" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Vm.UserDetails_Bypass}" Margin="0,4,0,0"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Последнее действие" Opacity="0.75" Margin="0,4,0,0"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Vm.UserDetails_LastAction}" Margin="0,4,0,0" TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Подхосты" Opacity="0.75" Margin="0,4,0,0"
                                           Visibility="{Binding Vm.HasUserDetails_SubHosts, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Vm.UserDetails_SubHosts}" Margin="0,4,0,0" TextWrapping="Wrap"
                                           Visibility="{Binding Vm.HasUserDetails_SubHosts, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>

                            <Expander Header="Диагностика (сырое)" Margin="0,8,0,0" IsExpanded="False">
                                <StackPanel>
                                    <TextBlock Text="{Binding Vm.RawDetailsText}" TextWrapping="Wrap" Opacity="0.75"/>
                                    <TextBlock Text="{Binding Main.Bypass.QuicDropTargetsText}" TextWrapping="Wrap" Opacity="0.75" Margin="0,8,0,0"
                                               Visibility="{Binding Main.Bypass.QuicDropTargetsText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                </StackPanel>
                            </Expander>

                            <Expander Header="История (сессии)" Margin="0,8,0,0" IsExpanded="False"
                                      Visibility="{Binding Vm.HasSessions, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <ItemsControl ItemsSource="{Binding Vm.Sessions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:OperatorSessionEntry}">
                                                <Border Padding="8" Margin="0,0,0,8" CornerRadius="8"
                                                        BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}">
                                                    <Expander IsExpanded="False">
                                                        <Expander.Header>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0" Text="{Binding StartedAtLocalText}" Opacity="0.75" FontSize="12"/>
                                                                <TextBlock Grid.Column="1" Text="{Binding DurationText}" Opacity="0.65" FontSize="12" Margin="10,0,0,0"/>
                                                                <TextBlock Grid.Column="3" Text="{Binding Outcome}" FontWeight="SemiBold" Margin="12,0,0,0"/>
                                                            </Grid>
                                                        </Expander.Header>

                                                        <StackPanel Margin="0,6,0,0">
                                                            <TextBlock Text="{Binding TrafficSource}" TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding CountsText}" Margin="0,4,0,0" Opacity="0.85" TextWrapping="Wrap"/>

                                                            <TextBlock Text="{Binding ProblemsText}" Margin="0,6,0,0" TextWrapping="Wrap"
                                                                       Visibility="{Binding HasProblems, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                            <TextBlock Text="{Binding ActionsText}" Margin="0,6,0,0" TextWrapping="Wrap" Opacity="0.85"
                                                                       Visibility="{Binding HasActions, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                            <TextBlock Text="{Binding PostApplyVerdict, StringFormat=Ретест: {0}}" Margin="0,6,0,0" TextWrapping="Wrap" Opacity="0.85"
                                                                       Visibility="{Binding HasPostApply, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                            <TextBlock Text="{Binding PostApplyStatusText}" Margin="0,2,0,0" TextWrapping="Wrap" Opacity="0.75"
                                                                       Visibility="{Binding HasPostApply, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                    </Expander>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Button Content="Очистить историю сессий"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Padding="12,6"
                                            HorizontalAlignment="Left"
                                            Command="{Binding Vm.ClearSessionsCommand}"/>
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </Expander>
                </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
