<Window x:Class="IspAudit.Windows.TestDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:IspAudit.Converters"
        Title="Подробности теста"
        Width="600"
        Height="750"
        WindowStartupLocation="CenterOwner"
    Background="{DynamicResource MaterialDesignPaper}"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Полупрозрачные фоны статусов (смотрятся нормально и в светлой, и в тёмной теме) -->
        <SolidColorBrush x:Key="UnknownBgBrush" Color="#9CA3AF" Opacity="0.25"/>
        <SolidColorBrush x:Key="PassBgBrush" Color="#10B981" Opacity="0.18"/>
        <SolidColorBrush x:Key="WarnBgBrush" Color="#F59E0B" Opacity="0.22"/>
        <SolidColorBrush x:Key="FailBgBrush" Color="#EF4444" Opacity="0.18"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding TargetName}"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
        </StackPanel>

        <!-- Статус -->
        <Border Grid.Row="1"
            Background="{DynamicResource MaterialDesignCardBackground}"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Large Status Icon -->
                <Border Grid.Column="0"
                        Width="48" Height="48"
                        CornerRadius="24"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource UnknownBgBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Pass">
                                    <Setter Property="Background" Value="{StaticResource PassBgBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Fail">
                                    <Setter Property="Background" Value="{StaticResource FailBgBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Warn">
                                    <Setter Property="Background" Value="{StaticResource WarnBgBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="?"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Pass">
                                        <Setter Property="Text" Value="✓"/>
                                        <Setter Property="Foreground" Value="#03543F"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Fail">
                                        <Setter Property="Text" Value="✕"/>
                                        <Setter Property="Foreground" Value="#9B1C1C"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Warn">
                                        <Setter Property="Text" Value="!"/>
                                        <Setter Property="Foreground" Value="#92400E"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Diagnosis}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               Visibility="{Binding HasDiagnosis, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <TextBlock Text="{Binding Recommendation}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"
                               Visibility="{Binding HasDiagnosis, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- Fallback if no diagnosis parsed -->
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Visibility="{Binding HasDiagnosis, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Информация -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Visual Checks Grid -->
                <TextBlock Text="Результаты проверок"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/> <!-- Separator -->
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/> <!-- Separator -->
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- DNS -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="DNS" FontWeight="Bold" Foreground="{DynamicResource MaterialDesignBodyLight}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <Border Width="32" Height="32" CornerRadius="16" HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource UnknownBgBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDnsOk}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PassBgBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDnsFail}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource FailBgBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="?"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDnsOk}" Value="True">
                                                    <Setter Property="Text" Value="✓"/>
                                                    <Setter Property="Foreground" Value="#03543F"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsDnsFail}" Value="True">
                                                    <Setter Property="Text" Value="✕"/>
                                                    <Setter Property="Foreground" Value="#9B1C1C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                            <TextBlock Text="{Binding DnsStatus}" FontSize="12" Margin="0,4,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </StackPanel>

                        <Rectangle Grid.Column="1" Width="1" Fill="{DynamicResource MaterialDesignDivider}" Margin="0,4"/>

                        <!-- TCP -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="TCP" FontWeight="Bold" Foreground="{DynamicResource MaterialDesignBodyLight}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <Border Width="32" Height="32" CornerRadius="16" HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource UnknownBgBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTcpOk}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PassBgBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsTcpFail}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource FailBgBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="?"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTcpOk}" Value="True">
                                                    <Setter Property="Text" Value="✓"/>
                                                    <Setter Property="Foreground" Value="#03543F"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsTcpFail}" Value="True">
                                                    <Setter Property="Text" Value="✕"/>
                                                    <Setter Property="Foreground" Value="#9B1C1C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                            <TextBlock Text="{Binding TcpStatus}" FontSize="12" Margin="0,4,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </StackPanel>

                        <Rectangle Grid.Column="3" Width="1" Fill="{DynamicResource MaterialDesignDivider}" Margin="0,4"/>

                        <!-- TLS -->
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                            <TextBlock Text="TLS" FontWeight="Bold" Foreground="{DynamicResource MaterialDesignBodyLight}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <Border Width="32" Height="32" CornerRadius="16" HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource UnknownBgBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTlsOk}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PassBgBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsTlsFail}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource FailBgBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="?"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTlsOk}" Value="True">
                                                    <Setter Property="Text" Value="✓"/>
                                                    <Setter Property="Foreground" Value="#03543F"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsTlsFail}" Value="True">
                                                    <Setter Property="Text" Value="✕"/>
                                                    <Setter Property="Foreground" Value="#9B1C1C"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                            <TextBlock Text="{Binding TlsStatus}" FontSize="12" Margin="0,4,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Основная информация -->
                <TextBlock Text="Параметры соединения"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Хост:" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,0,0,8"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Host}" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Задержка (Ping):" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,0,0,8"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Latency}" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Fallback IP:" Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Visibility="{Binding HasFallbackIp, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FallbackIp}"
                               Visibility="{Binding HasFallbackIp, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <!-- Детали теста -->
                <TextBlock Text="Технические подробности"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,8,0,12"
                           Visibility="{Binding HasDetails, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        Visibility="{Binding HasDetails, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding Details}"
                               FontFamily="Consolas"
                               FontSize="13"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="3"
                Content="Закрыть"
                HorizontalAlignment="Right"
                MinWidth="100"
                Padding="16,8"
                Margin="0,16,0,0"
                Click="CloseButton_Click"
                Style="{StaticResource SecondaryButtonStyle}"/>
    </Grid>
</Window>
