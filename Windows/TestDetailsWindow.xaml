<Window x:Class="ISPAudit.Windows.TestDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ISPAudit.Converters"
        Title="Подробности теста"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BgBrush}"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding TargetName}" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryBrush}"/>
            <TextBlock Text="{Binding Service}" 
                       FontSize="14" 
                       Foreground="{DynamicResource MutedBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Статус -->
        <Border Grid.Row="1" 
                Background="{DynamicResource PanelBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0"
                         Width="12" 
                         Height="12"
                         VerticalAlignment="Center"
                         Margin="0,0,12,0">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="{DynamicResource MutedBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Pass">
                                    <Setter Property="Fill" Value="{DynamicResource PassBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Fail">
                                    <Setter Property="Fill" Value="{DynamicResource FailBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Warn">
                                    <Setter Property="Fill" Value="{DynamicResource WarnBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Running">
                                    <Setter Property="Fill" Value="{DynamicResource RunningBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding StatusText}" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Error}" 
                               Foreground="{DynamicResource FailBrush}"
                               Margin="0,4,0,0"
                               Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Информация -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Основная информация -->
                <TextBlock Text="Основная информация" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Хост:" Foreground="{DynamicResource MutedBrush}" Margin="0,0,0,8"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Host}" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Сервис:" Foreground="{DynamicResource MutedBrush}" Margin="0,0,0,8"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Service}" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Критичность:" Foreground="{DynamicResource MutedBrush}" Margin="0,0,0,8"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CriticalText}" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Fallback IP:" Foreground="{DynamicResource MutedBrush}"
                               Visibility="{Binding HasFallbackIp, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding FallbackIp}"
                               Visibility="{Binding HasFallbackIp, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <!-- Детали теста -->
                <TextBlock Text="Детали теста" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,8,0,12"
                           Visibility="{Binding HasDetails, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <TextBlock Text="{Binding Details}" 
                           Background="{DynamicResource PanelBrush}"
                           Padding="12"
                           FontFamily="Consolas"
                           FontSize="12"
                           Visibility="{Binding HasDetails, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="3"
                Content="Закрыть"
                HorizontalAlignment="Right"
                MinWidth="100"
                Padding="16,8"
                Margin="0,16,0,0"
                Click="CloseButton_Click"
                Style="{StaticResource SecondaryButtonStyle}"/>
    </Grid>
</Window>
