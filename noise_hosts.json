{
  "description": "Паттерны шумных хостов для фильтрации. Поддерживается wildcard (*) в начале и конце.",
  "version": "1.1",
  "patterns": {
    "cdn_infrastructure": {
      "description": "CDN и облачная инфраструктура",
      "hosts": [
        "*.1e100.net",
        "*.bc.googleusercontent.com",
        "*.r.cloudfront.net",
        "server-*.cloudfront.net",
        "*.akamaiedge.net",
        "*.akamai.net",
        "*.fastly.net",
        "*.cdn.cloudflare.net",
        "*.vscode-cdn.net",
        "ec2-*.compute-*.amazonaws.com",
        "*.elb.amazonaws.com",
        "*.trafficmanager.net",
        "*.msedge.net"
      ]
    },
    "doh_dns_services": {
      "description": "DNS-over-HTTPS и публичные DNS",
      "hosts": [
        "cloudflare-dns.com",
        "*.cloudflare-dns.com",
        "dns.google",
        "dns.google.com",
        "doh.opendns.com",
        "dns.quad9.net",
        "dns.adguard.com"
      ]
    },
    "analytics_telemetry": {
      "description": "Аналитика и телеметрия",
      "hosts": [
        "*.google-analytics.com",
        "analytics.google.com",
        "*.analytics.google.com",
        "*.googletagmanager.com",
        "*.doubleclick.net",
        "*.googlesyndication.com",
        "*.adsrvr.org",
        "*.scorecardresearch.com",
        "*.hotjar.com",
        "*.mouseflow.com",
        "*.amplitude.com",
        "*.mixpanel.com",
        "vortex.data.microsoft.com",
        "*.telemetry.microsoft.com",
        "*.events.data.microsoft.com",
        "*.omtrdc.net",
        "stats.adobe.com",
        "*.usercentrics.eu"
      ]
    },
    "browser_services": {
      "description": "Браузерные сервисы (Edge, Chrome)",
      "hosts": [
        "edge.microsoft.com",
        "*.edge.microsoft.com",
        "www.google.com",
        "www.google.*",
        "*.gstatic.com",
        "*.googleapis.com"
      ],
      "exclude": [
        "*.storage.googleapis.com",

        "youtube.com",
        "www.youtube.com",
        "*.youtube.com",
        "youtu.be",
        "*.youtu.be",
        "*.googlevideo.com",
        "*.ytimg.com",
        "yt3.ggpht.com",
        "*.gvt1.com",
        "*.gvt2.com"
      ]
    },
    "monitoring": {
      "description": "Сервисы мониторинга",
      "hosts": [
        "*.newrelic.com",
        "*.datadoghq.com",
        "*.sentry.io",
        "*.raygun.io",
        "*.appdynamics.com"
      ]
    },
    "social_ads": {
      "description": "Социальные сети и реклама (кроме API)",
      "hosts": [
        "*.fbcdn.net",
        "*.t.co",
        "*.pinterest.com"
      ],
      "exclude": [
        "facebook.com",
        "www.facebook.com",
        "*.facebook.com",

        "*.fbcdn.net",
        "graph.facebook.com",
        "api.facebook.com",
        "api.twitter.com"
      ]
    },
    "isp_internal": {
      "description": "Внутренние хосты провайдеров",
      "hosts": [
        "yandex.ru",
        "www.yandex.ru",
        "*.yandex.ru",
        "*.rambler.ru"
      ],
      "exclude": [
        "api.*.yandex.net",
        "*.my.mail.ru",
        "api.mail.ru",
        "api.qiwi.com"
      ]
    },
    "system_services": {
      "description": "Системные и служебные сервисы",
      "hosts": [
        "*.msftncsi.com",
        "*.ntp.org",
        "time.*.com",
        "pool.ntp.org",
        "*.windowsupdate.com",
        "*.update.microsoft.com",
        "*.delivery.mp.microsoft.com"
      ]
    },
    "dns_network": {
      "description": "DNS и сетевые служебные зоны",
      "hosts": [
        "*.arpa",
        "*.local",
        "*.localdomain"
      ]
    },
    "misc_telemetry": {
      "description": "Прочая телеметрия",
      "hosts": [
        "*.smartscreen.microsoft.com",
        "*.gvt1.com",
        "*.gvt2.com"
      ],
      "exclude": [
        "api.bing.com"
      ]
    },
    "certificates_verification": {
      "description": "Проверка сертификатов (OCSP, CRL)",
      "hosts": [
        "ocsp.digicert.com",
        "crl3.digicert.com",
        "crl4.digicert.com",
        "*.symcb.com",
        "*.symcd.com",
        "mscrl.microsoft.com",
        "crl.microsoft.com",
        "ocsp.msocsp.com",
        "*.lencr.org",
        "*.identrust.com",
        "*.globalsign.com",
        "*.sectigo.com"
      ]
    },
    "hardware_telemetry": {
      "description": "Телеметрия драйверов и железа (NVIDIA, AMD)",
      "hosts": [
        "*.nvidia.com",
        "*.geforce.com",
        "*.nvidiagrid.net",
        "*.amd.com",
        "*.radeon.com"
      ]
    },
    "game_engine_analytics": {
      "description": "Аналитика игровых движков (Unity, Unreal)",
      "hosts": [
        "config.uca.cloud.unity3d.com",
        "cdp.cloud.unity3d.com",
        "*.unity3d.com",
        "*.epicgames.com",
        "*.unrealengine.com"
      ],
      "exclude": [
        "*.epicgames.dev" 
      ]
    }
  }
}
