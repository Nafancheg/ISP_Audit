<Window x:Class="ISPAudit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ISPAudit.Controls"
        xmlns:vm="clr-namespace:ISPAudit.ViewModels"
        Title="ISP Audit - Диагностика сети"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        Background="{StaticResource BgBrush}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: Fix Status Bar (Collapsible) -->
        <Border Grid.Row="0" 
                x:Name="FixStatusBar"
                Background="#FEF3F2" 
                BorderBrush="#FEE2E2"
                BorderThickness="1"
                CornerRadius="8" 
                Padding="16,12"
                Margin="0,0,0,24"
                Visibility="{Binding HasActiveFixes, Converter={StaticResource BoolToVisibilityConverter}}">
            <!-- Будет показываться через ViewModel когда есть активные фиксы -->
            <StackPanel>
                <!-- Compact Header (always visible) -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Warning Icon + Title + Count -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⚠️" FontSize="18" Margin="0,0,12,0"/>
                        <TextBlock Text="{Binding ActiveFixesMessage}" 
                                   Style="{StaticResource BodyStyle}" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource FailBrush}"/>
                    </StackPanel>
                    
                    <!-- Expand/Collapse Button -->
                    <Button Grid.Column="2"
                            x:Name="ToggleFixDetailsButton"
                            Content="▼ Подробнее"
                            Padding="12,6"
                            FontSize="12"
                            Margin="0,0,12,0"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="ToggleFixDetails_Click"/>
                    
                    <!-- Rollback All Button -->
                    <Button Grid.Column="3"
                            Content="Откатить всё"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding RollbackAllCommand}"
                            Padding="14,6"/>
                </Grid>
                
                <!-- Expandable Fix List -->
                <StackPanel x:Name="FixDetailsList" Visibility="Collapsed" Margin="0,16,0,0">
                    <ItemsControl ItemsSource="{Binding ActiveFixes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Description, StringFormat='• {0}'}"
                                               Style="{StaticResource BodyStyle}" 
                                               Foreground="#374151" 
                                               FontWeight="Medium"/>
                                    <Button Grid.Column="1" 
                                            Content="Откатить" 
                                            Padding="12,4"
                                            FontSize="12"
                                            Margin="12,0,0,0"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding DataContext.RollbackFixCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Scenario Selector -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="20" Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="Выберите сценарий проверки" Style="{StaticResource H2Style}" Margin="0,0,0,16"/>
                
                <Border Background="#F9FAFB" CornerRadius="8" Padding="4">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Профиль" 
                                     Style="{StaticResource ToggleRadioButtonStyle}"
                                     IsChecked="{Binding IsProfileScenario, Mode=TwoWay}"
                                     IsEnabled="{Binding IsStart}"
                                     GroupName="Scenario"/>
                        <RadioButton Content="Хост" 
                                     Style="{StaticResource ToggleRadioButtonStyle}"
                                     IsChecked="{Binding IsHostScenario, Mode=TwoWay}"
                                     IsEnabled="{Binding IsStart}"
                                     GroupName="Scenario"/>
                        <RadioButton Content="Приложение" 
                                     Style="{StaticResource ToggleRadioButtonStyle}"
                                     IsChecked="{Binding IsExeScenario, Mode=TwoWay}"
                                     IsEnabled="{Binding IsStart}"
                                     GroupName="Scenario"/>
                    </StackPanel>
                </Border>

                <!-- Profile Scenario -->
                <StackPanel Margin="0,16,0,0" Visibility="{Binding IsProfileScenario, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Профиль" Style="{StaticResource BodyStyle}" Margin="0,0,0,8"/>
                    <ComboBox Height="40"
                              Padding="12,8"
                              FontSize="14"
                              ItemsSource="{Binding AvailableProfiles}"
                              SelectedItem="{Binding SelectedProfile, Mode=TwoWay}"
                              IsEnabled="{Binding IsStart}"/>
                </StackPanel>

                <!-- Host Scenario -->
                <StackPanel Margin="0,16,0,0" Visibility="{Binding IsHostScenario, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Введите хост" Style="{StaticResource BodyStyle}" Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" 
                             Text="{Binding HostInput, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsStart}"/>
                </StackPanel>

                <!-- Exe Scenario -->
                <StackPanel Margin="0,16,0,0" Visibility="{Binding IsExeScenario, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Выберите exe файл" Style="{StaticResource BodyStyle}" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Style="{StaticResource ModernTextBoxStyle}" 
                                 Text="{Binding ExePath}" IsEnabled="False"/>
                        <Button Grid.Column="1" Content="Обзор..." 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding BrowseExeCommand}"
                                IsEnabled="{Binding IsStart}"
                                Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>

                <!-- Start Button -->
                <Button Content="{Binding StartButtonText}" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding StartCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,24,0,0"/>
            </StackPanel>
        </Border>

        <!-- Test Results -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="20">
            <Grid>
                <!-- Start State -->
                <StackPanel Visibility="{Binding IsStart, Converter={StaticResource BoolToVisibilityConverter}}"
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Готов к проверке" Style="{StaticResource H2Style}" 
                               Foreground="{StaticResource MutedBrush}" TextAlignment="Center"/>
                    <TextBlock Text="Выберите сценарий и нажмите 'Начать проверку'" 
                               Style="{StaticResource BodyStyle}"
                               Foreground="{StaticResource MutedBrush}"
                               TextAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Running/Done State -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Выполняется проверка..." Style="{StaticResource H2Style}" Margin="0,0,0,8"/>
                        
                        <!-- Current Action -->
                        <TextBlock Text="{Binding CurrentAction}" 
                                   Foreground="{StaticResource MutedBrush}"
                                   FontSize="14"
                                   Margin="0,0,0,16"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding CurrentAction, Converter={StaticResource StringToVisibilityConverter}}"/>
                        
                        <!-- Progress Stepper -->
                        <local:ProgressStepper Total="{Binding TotalTargets}" 
                                               Current="{Binding CurrentTest}"
                                               Completed="{Binding CompletedTests}"
                                               Margin="0,0,0,24"/>

                        <!-- Test Cards -->
                        <ItemsControl ItemsSource="{Binding TestResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:TestCard TestResult="{Binding}" Margin="0,0,0,12"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Done State -->
                <StackPanel Visibility="{Binding IsDone, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Проверка завершена" Style="{StaticResource H2Style}"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Экспорт отчета" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding ReportCommand}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Новая проверка" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding SetStateCommand}"
                                    CommandParameter="start"/>
                        </StackPanel>
                    </Grid>

                    <!-- Summary -->
                    <Border Background="#F9FAFB" CornerRadius="12" Padding="20" Margin="0,0,0,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Успешно" Style="{StaticResource CaptionStyle}"/>
                                <TextBlock Text="{Binding PassCount}" Style="{StaticResource H1Style}" 
                                           Foreground="{StaticResource PassBrush}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Ошибки" Style="{StaticResource CaptionStyle}"/>
                                <TextBlock Text="{Binding FailCount}" Style="{StaticResource H1Style}" 
                                           Foreground="{StaticResource FailBrush}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Предупреждения" Style="{StaticResource CaptionStyle}"/>
                                <TextBlock Text="{Binding WarnCount}" Style="{StaticResource H1Style}" 
                                           Foreground="{StaticResource WarnBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Test Results List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <ItemsControl ItemsSource="{Binding TestResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local:TestCard TestResult="{Binding}" Margin="0,0,0,12"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Exe Scenario: 3-Stage Workflow -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,24,0,0"
                Visibility="{Binding ExePath, Converter={StaticResource StringToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Автоматический анализ и обход блокировок" 
                               Style="{StaticResource H2Style}" 
                               Margin="0,0,0,24"/>

                    <!-- Stage 1: Traffic Analysis -->
                    <Border Background="#F9FAFB" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Этап 1: Анализ сетевого трафика" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2"
                                        Content="Запустить анализ"
                                        Command="{Binding AnalyzeTrafficCommand}"
                                        Background="{StaticResource PassBrush}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="20,10"
                                        Cursor="Hand"/>
                            </Grid>

                            <TextBlock Text="{Binding Stage1Status}" 
                                       Style="{StaticResource BodyStyle}" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"
                                       Visibility="{Binding Stage1Status, Converter={StaticResource StringToVisibilityConverter}}"/>

                            <StackPanel Orientation="Horizontal"
                                       Visibility="{Binding Stage1Complete, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding Stage1HostsFound, StringFormat='Обнаружено целей: {0}'}" 
                                           Style="{StaticResource BodyStyle}"
                                           Foreground="{StaticResource PassBrush}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                <Button Content="Просмотр результатов"
                                        Command="{Binding ViewStage1ResultsCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="12,6"
                                        FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Stage 2: Diagnosis -->
                    <Border Background="#F9FAFB" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Этап 2: Диагностика проблем" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2"
                                        Content="Диагностировать"
                                        Command="{Binding DiagnoseCommand}"
                                        Background="#3B82F6"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="20,10"
                                        Cursor="Hand"
                                        IsEnabled="{Binding CanRunStage2}"/>
                            </Grid>

                            <TextBlock Text="{Binding Stage2Status}" 
                                       Style="{StaticResource BodyStyle}" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"
                                       Visibility="{Binding Stage2Status, Converter={StaticResource StringToVisibilityConverter}}"/>

                            <TextBlock Text="{Binding Stage2ProblemsFound, StringFormat='Обнаружено проблем: {0}'}" 
                                       Style="{StaticResource BodyStyle}"
                                       Foreground="{StaticResource FailBrush}"
                                       FontWeight="SemiBold"
                                       Visibility="{Binding Stage2Complete, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- Stage 3: Apply Bypass -->
                    <Border Background="#F9FAFB" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Этап 3: Применение обхода" 
                                           Style="{StaticResource BodyStyle}" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="2"
                                        Content="Применить обход"
                                        Command="{Binding ApplyBypassCommand}"
                                        Background="#10B981"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="20,10"
                                        Cursor="Hand"
                                        IsEnabled="{Binding CanRunStage3}"/>
                            </Grid>

                            <TextBlock Text="{Binding Stage3Status}" 
                                       Style="{StaticResource BodyStyle}" 
                                       TextWrapping="Wrap"
                                       Visibility="{Binding Stage3Status, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="3" 
                   Text="ISP Audit v2.0 • Проверка сетевых проблем (с)DAfanasev 2025"
                   Style="{StaticResource CaptionStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,16,0,0"/>
    </Grid>
</Window>
