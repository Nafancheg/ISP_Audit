                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Scenario Selector -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}" 
                Padding="16" 
                Margin="0,0,0,12"
                AutomationProperties.AutomationId="ScenarioSelector">
            <StackPanel>
                <TextBlock Text="Ð”Ð¸Ð°Ð³Ð½Ð¾ÑÑ‚Ð¸ÐºÐ° Ð¿Ñ€Ð¸Ð»Ð¾Ð¶ÐµÐ½Ð¸Ñ" Style="{StaticResource H2Style}" Margin="0,0,0,8"/>
                
                <!-- Exe Selection -->
