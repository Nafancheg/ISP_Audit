                </Grid>
                
                <!-- Expandable Fix List -->
                <StackPanel x:Name="FixDetailsList" 
                            Visibility="Collapsed" 
                            Margin="0,16,0,0"
                            AutomationProperties.AutomationId="FixDetailsList">
                    <ItemsControl ItemsSource="{Binding ActiveFixes}"
