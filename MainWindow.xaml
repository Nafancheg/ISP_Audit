                            AutomationProperties.AutomationId="ExeScenarioPanel">
                    <TextBlock Text="Ð’Ñ‹Ð±ÐµÑ€Ð¸Ñ‚Ðµ exe Ñ„Ð°Ð¹Ð» Ð¸Ð³Ñ€Ñ‹ Ð¸Ð»Ð¸ Ð»Ð°ÑƒÐ½Ñ‡ÐµÑ€Ð°" Style="{StaticResource BodyStyle}" Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
